<!DOCTYPE html>
<html>
<head>
<link href='https://fonts.googleapis.com/css?family=Roboto:900&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
 <%- include('../partials/head') %>
</head>
<body>
 <%- include('../partials/navbar') %>

 <% if(user && user.handle) { %>
  <%- include('../partials/header', {subHeading: 'EDIT PROFILE'}) %>
  <form action="/additional-info" method="POST" enctype="multipart/form-data">
    <label>Handle:</label>
    <input class="input" type="text" name="user[handle]" placeholder="Handle"/>
    <br>
    <br>
    <label>Add Profile Photo</label>
    <br>
    <br>
    <input type="file" name="displayImage">
    <input id="edit_btn" type="submit" value="submit">
  </form>
  <a href="/"><button id="skip">Skip</button></a>
  <% } else { %>
    <%- include('../partials/header', {subHeading: 'UPDATE PROFILE'}) %>
    <form action="'/update-info" method = "" enctype="multipart/form-data">
      <label>Handle:</label>
      <input class="input" type="text" name="user[handle]" placeholder="Handle"/>
      <br>
      <br>
      <label>Add Profile Photo</label>
      <br>
      <br>
      <input type="file" name="displayImage">
      <input id="edit_btn" type="submit" value="submit">
    </form>
    <a href="/"><button id="skip">Skip</button></a>
  <% } %>
 <%- include('../partials/footer') %>
 <%- include('../partials/scripts') %>
</body>
</html>
