<!DOCTYPE html>
<html>
<head>
<link href='https://fonts.googleapis.com/css?family=Roboto:900&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
 <%- include('../partials/head', {pageType: "bio"}) %>
</head>
<body>
 <%- include('../partials/navbar') %>
 <%- include('../partials/header', {subHeading: 'ADD BIO'}) %>

 <% if(user && !user.bio) { %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <form method="POST" action="/users?_method=PUT">
        <textarea class="form-control field" id="textarea" rows=10 name="bio" placeholder="Tell us about yourself" required ></textarea>

        <input class ="form-control btn-success field " type="submit" value="submit" />
      </form>
      <a href="/"><button class="form-control btn-info field ">Skip</button></a>

    </div>
  </div>
 <% } else { %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <form method="POST" action="/users?_method=PUT">
        <textarea class="form-control field" id="textarea" rows=10 name="bio" required ><%= user.bio %></textarea>

        <input class ="form-control btn-success field " type="submit" value="submit" />
      </form>
      <a href="/trips"><button class="form-control btn-info field ">Skip</button></a>

    </div>
  </div>
  <% } %>


 <%- include('../partials/footer') %>
 <%- include('../partials/scripts') %>


</body>
</html>
